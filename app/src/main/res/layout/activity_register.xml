<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/register_toolbar"
        style="@style/AppTheme.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        android:background="@color/shallow_green"
        app:layout_scrollFlags="scroll|enterAlways"
        app:navigationIcon="@drawable/ic_arrow_back_white_24dp"
        app:title="@string/register" />

    <EditText
        android:id="@+id/register_password_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dp_48"
        android:layout_marginEnd="@dimen/dp_48"
        android:background="@drawable/bg_conner_grey"
        android:drawableStart="@drawable/ic_register_password"
        android:drawablePadding="@dimen/dp_20"
        android:hint="@string/register_password_hint"
        android:inputType="textPassword"
        android:padding="@dimen/dp_12"
        android:textColorHint="@color/light_white" />

    <EditText
        android:id="@+id/register_account_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_above="@id/register_password_edit"
        android:layout_marginStart="@dimen/dp_48"
        android:layout_marginEnd="@dimen/dp_48"
        android:layout_marginBottom="@dimen/dp_36"
        android:background="@drawable/bg_conner_grey"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="@dimen/dp_20"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="@string/register_account_hint"
        android:inputType="number"
        android:padding="@dimen/dp_12"
        android:textColorHint="@color/light_white" />

    <EditText
        android:id="@+id/register_confirm_password_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_below="@id/register_password_edit"
        android:layout_marginStart="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_48"
        android:background="@drawable/bg_conner_grey"
        android:drawableStart="@drawable/ic_register_password"
        android:drawablePadding="@dimen/dp_20"
        android:hint="@string/register_confirm_password_hint"
        android:inputType="textPassword"
        android:padding="@dimen/dp_12"
        android:textColorHint="@color/light_white" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_below="@id/register_confirm_password_edit"
        android:layout_marginStart="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginEnd="@dimen/dp_48"
        android:background="@drawable/bg_conner_green"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_21" />
</RelativeLayout>